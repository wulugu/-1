<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#91c5d2">

        <ImageView
            android:id="@+id/select"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/caidan"
            android:scrollbarSize="23dp" />


        <ImageButton
            android:id="@+id/search_search"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/sousuo" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#91c5d2">

        <TextView
            android:id="@+id/txt_user_menu1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="用户"
            android:textSize="8dp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txt_search_menu2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="搜索"
            android:textSize="8dp"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#91c5d2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:layout_gravity="bottom">
        <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:background="#00000000">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

<!--                加播放控件-->

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu1"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/music"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/menu2"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/xiaoxi"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/menu3"
                android:layout_width="35dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/my"
                android:clickable="true"
                android:focusable="true" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_music_menu1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="音乐"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/txt_main_menu2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/gray"
                />

            <TextView
                android:id="@+id/txt_my_menu3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/gray"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/textVi"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>



</LinearLayout>
